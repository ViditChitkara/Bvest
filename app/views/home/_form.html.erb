<!-- Button trigger modal -->
<button type="button" class="btn btn-default" id="header-btn" data-toggle="modal" data-target="#myModalForm" action="">Register Here</button>
<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="myModalForm" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close" 
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Registration Form
                </h4>
            </div>
            
            <!-- Modal Body -->
            <div class="modal-body">
                
                <form role="form" action="/registration/new" method="post">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Team Name</label>
                      <input type="name" class="form-control"
                      id="exampleInputEmail1" placeholder="Team name" name=team[team_name]>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputTeamSize1">Team Size</label>
                      <input type="number" onkeypress="return (event.charCode >= 49 && event.charCode<=53 && this.value.length<=0 )" class="form-control"
                      id="exampleInputTeamSize1" placeholder="Enter Team Size (Leave it blank if you are joining the above team)" min="1" max="5" name=team[size] >
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                      <input type="email" class="form-control"
                      id="exampleInputEmail1" placeholder="Enter email" name=team[email] >
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail1">Github handle</label>
                      <input type="github" class="form-control"
                      id="exampleInputGithub1" placeholder="Enter Your github handle" name=team[github] >
                  </div>

                  <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                          data-dismiss="modal">
                              Close
                    </button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                      </button>
                  </div>
                </form>
            </div>
        </div>
    </div>
</div>